<div class='mt-4'>
  <div class='row gy-4'>
    {{#each courses}}
      <div class='col-4'>
        <div class='card'>
          <a href='/courses/{{this.slug}}'>
            <img
              src='{{this.thumb}}'
              class='card-img-top'
              alt='{{this.name}}'
            /></a>
          <div class='card-body'>
            <a href='/courses/{{this.slug}}'>
              <h5 class='card-title'>{{this.name}}</h5>
            </a>
            <p class='card-text'>{{this.desc}}</p>
            <a href='#' class='btn btn-primary'>Mua khóa học</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>